<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
  
  <context-param>
    <param-name>config.path</param-name>
    <param-value>/home/opt/oaiprovider/config/</param-value>
  </context-param>
  
  <listener>
    <listener-class>de.qucosa.oai.provider.application.ApplicationConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>de.qucosa.oai.provider.application.DatabaseConfigListerner</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>provider</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>de.qucosa.oai.provider.application.ApplicationConfig</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>provider</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>